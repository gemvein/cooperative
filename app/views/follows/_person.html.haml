- unless person == current_user
  - if current_user.following?(person)
    = link_to '<i class="icon-remove"></i> '.html_safe + :unfollow.l, cooperative.person_follow_path(person.to_param, current_user.get_follow(person).id), :method => :delete, :remote => true, :class => 'btn btn-danger'
  - else 
    = link_to '<i class="icon-asterisk"></i> '.html_safe + :follow.l, cooperative.person_follows_path(person.to_param), :remote => true, :method => :post, :class => 'btn btn-success'