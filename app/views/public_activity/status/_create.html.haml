- status = activity.trackable or Status.find(status_id)
.activity.clearfix.infinitescroll-item
  .status{:id => 'status_' + status.id.to_s}
    - add_tab :show.l, 'show_status_' + status.id.to_s do
      .span1
        = thumbnail link_to image_tag(activity.owner.image.url(:thumb)), cooperative.person_path(activity.owner.nickname)
      .span6
        = actionable_descriptor status, 'check'
        = tokenize status.body
        - if can? :destroy, status
          = link_to icon('trash'), cooperative.status_path(status), :method => :delete, :remote => true, :class => 'pull-right', :format => :js, data: { :confirm => :are_you_sure.l }
        = render 'statuses/shareable', :status => status
        .comments.clearfix{:id => 'status_' + status.id.to_s + '_comments'}
          - unless status.comments.empty?
            = render :partial => 'comments/comments', :locals => {:comments => status.comments}
        .clearfix
          .span1
            = thumbnail link_to image_tag(@current_user.image.url(:thumb)), cooperative.person_path(@current_user.nickname)
          .span4{:id => 'status_' + status.id.to_s + '_comment_form'}
            = render :partial => 'comments/form', :locals => {:commentable => status}
    - add_tab badge(status.statuses.count.to_s, 'info') + :share.l, 'share_status_' + status.id.to_s do
      = render :partial => 'statuses/form_for_sharing', :locals => {:status => status.build_status}
    - add_tab :vote.l, 'vote_status_' + status.id.to_s, :before_link => rating_toggle(status) do
      %div{:id => 'status_' + status.id.to_s + '_ratings_info'}= ratings_info status, :rates_name => :votes.l.downcase, :rated_name => :voted.l.downcase
      %div{:id => 'status_' + status.id.to_s + '_vote_large_primary'}= rating_vote status, 'btn btn-primary btn-large'

    = render_tabs 'left'