- add_widget do
  %ul.nav.nav-list
    - if controller_name != 'sessions'
      = nav_item "Sign in", new_user_session_path
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = nav_item "Sign up", new_user_registration_path
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      = nav_item "Forgot your password?", new_user_password_path
    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      = nav_item "Didn't receive confirmation instructions?", new_user_confirmation_path
    - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
      = nav_item "Didn't receive unlock instructions?", new_user_unlock_path
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        = nav_item "Sign in with #{provider.to_s.titleize}", user_omniauth_authorize_path(provider)
