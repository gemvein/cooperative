- add_title :sign_up.l
= bootstrap_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form form-horizontal'} do |f|
  = f.email_field :email
  = f.text_field :nickname, :help_inline => :visible_to_anyone_with_an_account.l
  = f.password_field :password
  = f.password_field :password_confirmation, :required => true
  .controls= f.submit :sign_up.l
= render "users/shared/links"
