- add_title :change_your_password.l
= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form form-horizontal' }) do |f|
  = f.hidden_field :reset_password_token
  = f.password_field :password, :autofocus => true, :label => :new_password.l
  = f.password_field :password_confirmation, :label => :confirm_new_password.l
  .controls= f.submit :change_my_password.l
= render "devise/shared/links"
