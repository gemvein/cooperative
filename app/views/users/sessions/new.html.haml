- add_title :sign_in.l

= bootstrap_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form form-horizontal'} do |f|
  = f.email_field :email
  = f.password_field :password
  - if devise_mapping.rememberable?
    = f.check_box :remember_me
  .controls
    = f.submit :sign_in.l
= render "devise/shared/links"
