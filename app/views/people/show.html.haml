-@title = @person.nickname

%dl.horizontal
  %dt= :skills.l
  %dd= @person.skill_list.join(', ')
  %dt= :hobbies.l
  %dd= @person.hobby_list.join(', ')
  %dt= :interests.l
  %dd= @person.interest_list.join(', ')
  
=render 'submenu'

%div{:id => 'follow_person' + @person.id.to_s}= render 'follows/person', :person => @person

-if @person.image_file_name
  .thumbnail.span6.pull-right= link_to image_tag(@person.image.url(:large)), @person.image.url(:original)
    
-unless @person.bio.blank?
  %h2= :bio.l
  =sanitize @person.bio.html_safe