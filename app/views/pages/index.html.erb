<h1>Listing pages</h1>

<table>
  <tr>
    <th>Page</th>
    <th>User</th>
    <th>Slug</th>
    <th>Title</th>
    <th>Description</th>
    <th>Keywords</th>
    <th>Body</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.page %></td>
    <td><%= page.user %></td>
    <td><%= page.slug %></td>
    <td><%= page.title %></td>
    <td><%= page.description %></td>
    <td><%= page.keywords %></td>
    <td><%= page.body %></td>
    <td><%= page.public %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

