- if can?(:manage, @page) and @person == current_user
  .pull-right
    =link_to icon('file-alt') + :edit_page.l, cooperative.edit_person_page_path(@person, @page.id), :class => 'btn btn-primary'
    =link_to icon('trash') + :delete_page.l, cooperative.person_page_path(@person, @page.id), :method => 'delete', :class => 'btn btn-danger', data: { :confirm => :are_you_sure.l }
  
= render 'page'

= render 'widget', :pages => @page.children

- if @person
  = render 'people/submenu'
  
=render 'tags/submenu_for_page', :page => @page