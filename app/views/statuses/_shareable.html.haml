- if !status.shareable.nil? or (!status.url.nil? and status.url != '')
  .row.well
    %blockquote
      - if status.media_url.present?
        .span3.pull-right= thumbnail video(status.media_url, status.media_type, :width => 300, :height => 200)
      - elsif !status.image_file_name.nil?
        .span3.pull-right= thumbnail link_to image_tag(status.image.url(:medium)), status.url
      %h3= link_to status.title, status.url
      %p= tokenize status.description
      -if !status.shareable.nil?
        %cite
          = :posted_by.l
          = link_to status.shareable.user.nickname, cooperative.person_path(status.shareable.user.nickname)
          ,
          = status.shareable.created_at