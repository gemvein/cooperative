- add_title @group.name
- add_keywords @group.tag_list
- add_description @group.description
- add_opengraph_data @group

-unless @group.tags.empty?
  %dl.horizontal
    %dt= :tags.l
    %dd= tag_list @group.tags
  
%p= @group.description

-if can? :edit, @group
  .pull-right
    =link_to icon('file-alt') + :edit_group.l, cooperative.edit_group_path(@group), :class => 'btn btn-primary'
    =link_to icon('trash') + :delete_group.l, cooperative.group_path(@group), :method => 'delete', :class => 'btn btn-danger', data: { :confirm => :are_you_sure.l }

%div{:id => 'join_group' + @group.id.to_s}
  = render 'groups/join_button', :group => @group 